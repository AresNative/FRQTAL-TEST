---
interface Props {
    name: string;
    image: string;
}

const { image, name } = Astro.props;
---

<li class="avatar">
    <img src={image} alt={`Profile picture of ${name}`} />
    <h2>{name}</h2>
</li>

<style>
  .avatar {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
	min-width: 10rem;
    margin: 1rem auto;
    padding: 1rem;
    border-radius: var(--border-rd);
    text-align: center;
  }

  .avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #ddd;
    margin-bottom: 1rem;
  }

  .avatar h2 {
    font-size: 1.5rem; 
    color: #333; 
    margin: 0; 
  }
</style>
